@model EA_MVC_Practice.DTO.LoginDTO

@{
    <form method="post" asp-controller="Account" asp-action="Login">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label asp-for="Username" class="form-label">Username</label>
            <input asp-for="Username" type="text" class="form-control">
            <span class="text-danger small" asp-validation-for="Username"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control">
            <span class="text-danger small" asp-validation-for="Password"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



