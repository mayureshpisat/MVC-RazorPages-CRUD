@model IEnumerable<EA_MVC_Practice.Models.Product>

@{

    <table class="table">
    <p><a asp-action="Add" class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Add Product</a></p>
    <thead>
        <th scope="col">Sr.No</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
    </thead>
    <tbody>
            @{
                int count = 1;
            }
            @foreach(var item in Model)
            {
                
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <p><a asp-action = "Delete" asp-route-id = "@item.Id" class="link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Delete</a></p>
                        <p><a asp-action="Edit"  asp-route-id="@item.Id"  class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Edit</a></p>
                    </td>
                </tr>
                count++;
                
            }

    </tbody>

    </table>
}
